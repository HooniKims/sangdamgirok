rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isMe(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function myRole() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
          ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
          : "";
    }

    function isAdmin() {
      return isSignedIn() && myRole() == "admin";
    }

    match /users/{uid} {
      allow create: if isMe(uid);
      allow read, update: if isMe(uid) || isAdmin();
      allow delete: if false;
    }

    // 이메일/비밀번호 로그인 실패 누적 잠금용
    // 잠금 확인/기록은 서버 API(Firebase Admin SDK)에서 처리합니다.
    // 클라이언트에서는 관리자의 잠금 해제만 허용합니다.
    match /loginLocks/{lockKey} {
      allow read: if isSignedIn();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /consultations/{consultationId} {
      allow create: if isSignedIn()
        && request.resource.data.teacherId == request.auth.uid;

      allow read, update, delete: if isSignedIn()
        && resource.data.teacherId == request.auth.uid;
    }
  }
}
